# msmtp configuration to route all outgoing mail to MailHog in local dev
# https://github.com/mailhog/MailHog
# This file is copied to /etc/msmtprc inside the container

# Set default values for all accounts
defaults
auth           off
syslog         on
logfile        /var/log/msmtp.log

# Local MailHog instance
account        mailhog
host           mailhog
port           1025
from           wordpress@localhost

# Set a default account
account default : mailhog
